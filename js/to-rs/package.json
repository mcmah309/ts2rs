{
  "name": "to-rs",
  "version": "0.0.1",
  "type": "module",
  "description": "to rs",
  // "author": "REPLACE_OR_REMOVE_ME",
  // "license": "REPLACE_OR_REMOVE_ME",
  // "repository": {
  //   "type": "git",
  //   "url": "https://github.com/mcmah309/REPLACE_OR_REMOVE_ME.git",
  //   "directory": "REPLACE_OR_REMOVE_ME"
  // },
  "exports": { // Note: The order of keys is critical. Runtimes read them from top to bottom.
    ".": {
      "bun": "./src/index.ts", // Bun uses this for bundling so things like feature flags can work across libs
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js", // Used when the package is loaded via import or import(). Other bundlers (Vite/Webpack) use this
      // "require": "./dist/external/index.cjs", // Used when the package is loaded via require(). Usually points to CJS (CommonJS) code.
      "default": "./dist/lib/index.js" // The fallback. This should always be the last key.
    },
    "./bundle": "./dist/bundle/index.js", 
    // "./style.css": "./dist/bundle/index.css"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run ../build.ts",
    "build:release": "NODE_ENV=production bun run ../build.ts",
    "watch": "bun run ../build.ts --watch",
    "test": "bun test",
    // todo remove below as needed
    "prebuild": "bun run tailwind && bun run tcm",
    "prewatch": "bun run tailwind:watch & bun run tcm:watch",
    "tailwind": "bunx @tailwindcss/cli -i ./src/tailwind.input.css -o ./src/tailwind.css --minify", // make sure to `import "tailwind.css"` in `index.ts`
    "tailwind:watch": "bunx @tailwindcss/cli -i ./src/tailwind.input.css -o ./src/tailwind.css --watch",
    "tcm": "bunx tcm src -p *.module.css",  // make sure to import these in `index.ts`
    "tcm:watch": "bunx tcm src -p *.module.css --watch"
  },
  "devDependencies": {
    "@types/bun": "catalog:"
  }
}